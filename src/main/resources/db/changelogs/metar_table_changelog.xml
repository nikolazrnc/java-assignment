<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="1-create-metar" author="nikola">
        <createTable tableName="metar">
            <column name="metar_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="subscription_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="metar"
                                 baseColumnNames="subscription_id"
                                 referencedTableName="subscription"
                                 referencedColumnNames="subscription_id"
                                 constraintName="fk_metar_subscription"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="2-add-metar-columns" author="nikola">
        <addColumn tableName="metar">
            <column name="airport_name" type="VARCHAR(255)"/>
            <column name="observation_time" type="VARCHAR(255)"/>
            <column name="wind" type="VARCHAR(255)"/>
            <column name="wind_variation" type="VARCHAR(255)"/>
            <column name="visibility" type="VARCHAR(255)"/>
            <column name="cloud_coverage" type="VARCHAR(255)"/>
            <column name="weather" type="VARCHAR(255)"/>
            <column name="temperature" type="VARCHAR(255)"/>
            <column name="dew_point" type="VARCHAR(255)"/>
            <column name="pressure" type="VARCHAR(255)"/>
            <column name="rvr" type="VARCHAR(255)"/>
            <column name="trend" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
