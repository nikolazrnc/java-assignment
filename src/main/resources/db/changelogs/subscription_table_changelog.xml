<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="1-create-subscription" author="nikola">
        <createTable tableName="subscription">
            <column name="subscription_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="icao_code" type="VARCHAR(4)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2-add-icao-constraint" author="nikola">
        <sql>
            alter table subscription add constraint check_icao_code check (icao_code ~ '^[A-Za-z]{4}$');
        </sql>
    </changeSet>

    <changeSet id="3-add-is-active-column" author="nikola">
        <addColumn tableName="subscription">
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
